{
  "name": "figma-tokens",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "yarn build-dictionary && next build",
    "start": "next start",
    "lint": "next lint --fix && next lint",
    "build-dictionary": "yarn token-transformer-all && node ./sd-config.js && yarn lint",
    "token-transformer-light-theme": "token-transformer ./src/figma-tokens/tokens.json ./src/figma-tokens/token-transformer-input/light-theme.json Light,global Dark,Desktop,Mobile --resolveReferences=false",
    "token-transformer-dark-theme": "token-transformer ./src/figma-tokens/tokens.json ./src/figma-tokens/token-transformer-input/dark-theme.json Dark,global Light,Desktop,Mobile --resolveReferences=false",
    "token-transformer-main": "token-transformer ./src/figma-tokens/tokens.json ./src/figma-tokens/token-transformer-input/main.json Desktop,global Light,Dark,Mobile --resolveReferences=false",
    "token-transformer-all": "yarn token-transformer-light-theme && yarn token-transformer-dark-theme && yarn token-transformer-main"
  },
  "dependencies": {
    "@next/font": "13.1.6",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "eslint": "8.33.0",
    "eslint-config-next": "13.1.6",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.58.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "style-dictionary": "^3.7.2",
    "token-transformer": "^0.0.29"
  }
}
